<!-- activity_settings.xml -->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/default_url_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Default URL"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/webview_width_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WebView Width (0 for MATCH_PARENT)"
            android:inputType="number" />

        <EditText
            android:id="@+id/webview_height_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WebView Height Percentage (e.g., 80 for 80%)"
            android:inputType="number" />

        <EditText
            android:id="@+id/gridview_columns_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GridView Columns (e.g., 8)"
            android:inputType="number" />

        <Button
            android:id="@+id/save_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Settings"
            android:onClick="saveSettings" />

    </LinearLayout>
</ScrollView>